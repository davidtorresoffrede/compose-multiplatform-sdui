{
  "id": "login",
  "component": "layout:scaffold",
  "properties": {
    "verticalScroll": "true",
    "topBar": {
      "component": "layout:topAppBar",
      "properties": {
        "backgroundColor": "FF244F9D",
        "color": "FFFFFFFF",
        "title": "ENTRAR",
        "horizontalArrangement": "Center",
        "onClick": {
          "component": "navigation:goBack"
        }
      }
    },
    "bottomBar": {
      "component": "layout:textButton",
      "properties": {
        "height": "70",
        "paddingHorizontal": "5",
        "fillMaxWidth": "1",
        "roundedCornerShape": "7",
        "text": "Entrar",
        "onClick": [
          {
            "component": "action:method",
            "properties": {
              "method": "login"
            }
          }
        ]
      }
    }
  },

  "children": [
    {
      "component": "layout:row",
      "properties": {
        "fillMaxWidth": "1",
        "horizontalArrangement": "Center",
        "paddingAll": "30"
      },
      "children": [
        {
          "component": "layout:imageFile",
          "properties": {
            "painterResource": "drawable/ic_logo_dark_mini.xml",
            "contentDescription": "LOGO"
          }
        }
      ]
    },
    {
      "id": "tfEmail",
      "component": "layout:textField",
      "properties": {
        "fillMaxWidth": "1",
        "keyboardType": "Email",
        "paddingTop": "10",
        "paddingHorizontal": "10",
        "onChangeUpdateState": "email",
        "imeAction": "Next",
        "trailingIconColor": "#9AAED2",
        "underLineColor": "#9AAED2",
        "label": [
          {
            "component": "layout:text",
            "properties": {
              "text": "Email"
            }
          }
        ]
      }
    },
    {
      "id": "tfPassword",
      "component": "layout:textField",
      "properties": {
        "fillMaxWidth": "1",
        "paddingTop": "10",
        "paddingHorizontal": "10",
        "keyboardType": "NumberPassword",
        "onChangeUpdateState": "password",
        "imeAction": "Done",
        "trailingIconColor": "#9AAED2",
        "underLineColor": "#9AAED2",
        "label": [
          {
            "component": "layout:text",
            "properties": {
              "text": "Senha"
            }
          }
        ]
      }
    },
    {
      "component": "layout:row",
      "properties": {
        "fillMaxWidth": "",
        "horizontalArrangement": "End",
        "verticalAlignment": "Center",
        "paddingVertical": "20",
        "paddingEnd": "12"
      },
      "children": [
        {
          "component": "layout:imageFile",
          "properties": {
            "paddingEnd": "10",
            "painterResource": "drawable/ic_back_right_dark.xml",
            "contentDescription": "LOGO"
          }
        },
        {
          "component": "layout:text",
          "properties": {
            "text": "Esqueci a senha",
            "textColor": "9AAED2",
            "onClick": [
              {
                "component": "navigation:goTo",
                "properties": {
                  "destiny": "menu"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "component": "event:loader",
      "properties": {
        "ifState": [
          {
            "state": "userExists",
            "then": [
              {
                "component": "navigation:goTo",
                "properties": {
                  "destiny": "home",
                  "popStack": true
                }
              }
            ],
            "else": [
              {
                "component": "navigation:goTo",
                "properties": {
                  "destiny": "login",
                  "popStack": true
                }
              }
            ]
          }
        ]
      }
    }
  ]
}