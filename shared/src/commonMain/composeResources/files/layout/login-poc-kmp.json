{
  "id": "login",
  "component": "layout:column",
  "properties": {
    "horizontalAlignment": "Center"
  },
  "children": [
    {
      "component": "layout:topAppBar",
      "properties": {
        "title": "ENTRAR",
        "horizontalArrangement": "Center"
      }
    },
    {
      "component": "layout:row",
      "properties": {
        "fillMaxWidth": "1",
        "horizontalArrangement": "Center",
        "paddingTop": "12"
      },
      "children": [
        {
          "component": "layout:imageFile",
          "properties": {
            "painterResource": "drawable/ic_logo_dark.xml",
            "contentDescription": "LOGO"
          }
        }
      ]
    },
    {
      "component": "layout:column",
      "properties": {
        "paddingAll": "5",
        "verticalArrangement": "Center",
        "spacedBy": "12"
      },
      "children": [
        {
          "id": "tfEmail",
          "component": "layout:textField",
          "properties": {
            "fillMaxWidth": "1",
            "keyboardType": "Email",
            "paddingTop": "10",
            "paddingHorizontal": "10",
            "onChangeUpdateState": "email",
            "imeAction": "Next",
            "label": [
              {
                "component": "layout:text",
                "properties": {
                  "text": "Email"
                }
              }
            ]
          }
        },
        {
          "id": "tfPassword",
          "component": "layout:textField",
          "properties": {
            "fillMaxWidth": "1",
            "paddingTop": "10",
            "paddingHorizontal": "10",
            "keyboardType": "NumberPassword",
            "onChangeUpdateState": "password",
            "imeAction": "Done",
            "label": [
              {
                "component": "layout:text",
                "properties": {
                  "text": "Senha"
                }
              }
            ]
          }
        },
        {
          "component": "layout:row",
          "properties": {
            "fillMaxWidth": "",
            "horizontalArrangement": "End",
            "verticalAlignment": "Center",
            "paddingVertical": "20",
            "paddingEnd": "12"
          },
          "children": [
            {
              "component": "layout:imageFile",
              "properties": {
                "paddingEnd": "10",
                "painterResource": "drawable/ic_back_right.xml",
                "contentDescription": "LOGO"
              }
            },
            {
              "component": "layout:text",
              "properties": {
                "text": "Esqueci a senha",
                "onClick": [
                  {
                    "component": "navigation:goTo",
                    "properties": {
                      "destiny": "menu"
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "component": "layout:row",
      "properties": {
        "verticalAlignment": "Bottom",
        "fillMaxSize": "",
        "paddingAll": "20"
      },
      "children": [
        {
          "component": "layout:textButton",
          "properties": {
            "height": "70",
            "paddingHorizontal": "5",
            "fillMaxWidth": "1",
            "roundedCornerShape": "7",
            "text": "Entrar",
            "onClick": [
              {
                "component": "navigation:goTo",
                "properties": {
                  "destiny": "menu"
                }
              }
            ]
          }
        }
      ]
    }
  ]
}