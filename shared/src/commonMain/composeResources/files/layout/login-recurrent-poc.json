{
  "id": "login-poc",
  "component": "layout:column",
  "properties": {
    "horizontalAlignment": "Center",
    "backgroundGradient": {
      "type": "linear",
      "colors": [
        "#244F9D",
        "#0F2142"
      ]
    }
  },
  "children": [
    {
      "component": "layout:column",
      "properties": {
        "fillMaxWidth": "1",
        "verticalArrangement": "Center",
        "horizontalAlignment": "Center",
        "paddingTop": "12"
      },
      "children": [
        {
          "component": "layout:imageFile",
          "properties": {
            "painterResource": "drawable/ic_logo_light_mini.xml",
            "contentDescription": "LOGO"
          }
        },
        {
          "component": "layout:imageFile",
          "properties": {
            "paddingTop": "12",
            "painterResource": "drawable/ic_round_icon.xml",
            "contentDescription": "LOGO"
          }
        },
        {
          "component": "layout:text",
          "properties": {
            "text": "LEONARDO WIEBUSCH",
            "fontWeight": "ExtraBold",
            "textColor": "FFFFFFFF",
            "paddingTop": "12"
          }
        },
        {
          "component": "layout:text",
          "properties": {
            "text": "99909990-1",
            "textColor": "FFFFFFFF"
          }
        }
      ]
    },
    {
      "component": "layout:column",
      "properties": {
        "paddingAll": "5",
        "verticalArrangement": "Center",
        "spacedBy": "12"
      },
      "children": [
        {
          "id": "tfPassword",
          "component": "layout:textField",
          "properties": {
            "fillMaxWidth": "1",
            "paddingTop": "10",
            "paddingHorizontal": "10",
            "keyboardType": "NumberPassword",
            "onChangeUpdateState": "password",
            "imeAction": "Done",
            "label": [
              {
                "component": "layout:text",
                "properties": {
                  "text": "Senha"
                }
              }
            ]
          }
        },
        {
          "component": "layout:row",
          "properties": {
            "fillMaxWidth": "",
            "horizontalArrangement": "End",
            "verticalAlignment": "Center",
            "paddingVertical": "20",
            "paddingEnd": "12"
          },
          "children": [
            {
              "component": "layout:imageFile",
              "properties": {
                "paddingEnd": "10",
                "painterResource": "drawable/ic_back_right_dark.xml",
                "contentDescription": "LOGO"
              }
            },
            {
              "component": "layout:text",
              "properties": {
                "text": "Esqueci a senha",
                "onClick": [
                  {
                    "component": "navigation:goTo",
                    "properties": {
                      "destiny": "menu"
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "component": "layout:row",
      "properties": {
        "verticalAlignment": "Bottom",
        "fillMaxSize": "",
        "paddingAll": "20"
      },
      "children": [
        {
          "id": "btEnter",
          "component": "layout:outlinedButton",
          "properties": {
            "fillMaxWidth": "1",
            "height": "70",
            "roundedCornerShape": "7",
            "text": "Entrar",
            "onClick": [
              {
                "component": "action:method",
                "properties": {
                  "method": "loginRecurrent"
                }
              }
            ]
          }
        },
        {
          "component": "event:loader",
          "properties": {
            "ifState": [
              {
                "state": "loginAgain",
                "then": [
                  {
                    "component": "navigation:goTo",
                    "properties": {
                      "destiny": "menu",
                      "popStack": true
                    }
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  ]
}