{
  "id": "template",
  "component": "layout:column",
  "states": [
    {
      "id": "greetingText",
      "component": "state:string",
      "properties": {
        "value": "Hello, World!"
      }
    },
    {
      "id": "showImage",
      "component": "state:boolean",
      "properties": {
        "value": "false"
      }
    }
  ],
  "properties": {
    "fillMaxWidth": "1.0",
    "horizontalAlignment": "CenterHorizontally",
    "fillMaxHeight": "1"
  },
  "children": [
    {
      "component": "layout:textField",
      "properties": {
        "text": "Ana",
        "onChangeUpdateState": "name"
      },
      "children": [
        {
          "component": "layout:text",
          "properties": {
            "text": "Name"
          }
        }
      ]
    },
    {
      "component": "layout:button",
      "properties": {
        "onClick": [
          {
            "component": "state:update",
            "properties": {
              "id": "greetingText",
              "value": "Hello, #{platformName}"
            }
          },
          {
            "component": "state:update",
            "properties": {
              "id": "showImage",
              "value": "true"
            }
          }
        ]
      },
      "children": [
        {
          "component": "layout:text",
          "properties": {
            "text": "Hello #{name}"
          }
        }
      ]
    },
    {
      "component": "layout:animatedVisibility",
      "properties": {
        "visible": "#{showImage}"
      },
      "children": [
        {
          "component": "layout:imageFile",
          "properties": {
            "painterResource": "compose-multiplatform.xml",
            "contentDescription": null
          }
        }
      ]
    }
  ]
}