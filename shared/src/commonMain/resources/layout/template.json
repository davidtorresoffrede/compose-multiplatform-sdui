{
  "id": "template",
  "component": "layout:column",
  "states": [
    {
      "id": "greetingText",
      "component": "state:string",
      "properties": {
        "value": "Hello, World!"
      }
    },
    {
      "id": "showImage",
      "component": "state:boolean",
      "properties": {
        "value": "false"
      }
    }
  ],
  "properties": {
    "fillMaxWidth": "1.0",
    "horizontalAlignment": "Center",
    "fillMaxHeight": "1"
  },
  "children": [
    {
      "component": "layout:textField",
      "properties": {
        "text": "Ana",
        "onChangeUpdateState": "name",
        "label": [
          {
            "component": "layout:text",
            "properties": {
              "text": "Name"
            }
          }
        ]
      }
    },
    {
      "component": "layout:button",
      "properties": {
        "onClick": [
          {
            "component": "state:update",
            "properties": {
              "state": "platformName",
              "method": "getPlatformName"
            }
          },
          {
            "component": "state:update",
            "properties": {
              "state": "greetingText",
              "value": "Hello, #{platformName}"
            }
          },
          {
            "component": "state:update",
            "properties": {
              "state": "showImage",
              "method": "not",
              "param1": "#{showImage}"
            }
          }
        ]
      },
      "children": [
        {
          "component": "layout:text",
          "properties": {
            "text": "Hello, #{name} from #{platformName}"
          }
        }
      ]
    },
    {
      "component": "layout:button",
      "properties": {
        "onClick": {
          "component": "action:method",
          "properties": {
            "method": "openUrl",
            "url": "https://www.google.com.br/"
          }
        }
      },
      "children": [
        {
          "component": "layout:text",
          "properties": {
            "text": "Open Google"
          }
        }
      ]
    },
    {
      "component": "layout:animatedVisibility",
      "properties": {
        "visible": "#{showImage}"
      },
      "children": [
        {
          "component": "layout:imageFile",
          "properties": {
            "painterResource": "compose-multiplatform.xml",
            "contentDescription": null
          }
        }
      ]
    }
  ]
}